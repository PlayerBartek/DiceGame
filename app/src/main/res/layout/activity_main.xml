<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5DC"
    android:padding="16dp">


    <TextView
        android:id="@+id/podpis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#A52A2A"
        android:text="Gra w kości. Autor: Bartłomiej Szymczak"
        android:textColor="#ffffff"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/pszycisk_rzut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#D2691E"
        android:text="RZUĆ KOŚĆMI"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kosc1"
            android:layout_width="57dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:gravity="center"
            android:padding="20dp"
            android:background="#ffffff"
            android:text="?"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/kosc2"
            android:layout_width="57dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:gravity="center"
            android:padding="20dp"
            android:background="#ffffff"
            android:text="?"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/kosc3"
            android:layout_width="57dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:gravity="center"
            android:padding="20dp"
            android:background="#ffffff"
            android:text="?"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/kosc4"
            android:layout_width="57dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:gravity="center"
            android:padding="20dp"
            android:background="#ffffff"
            android:text="?"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/kosc5"
            android:layout_width="57dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:gravity="center"
            android:padding="20dp"
            android:background="#ffffff"
            android:text="?"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/wynik_losowania"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Wynik tego losowania: 0" />


    <TextView
        android:id="@+id/wynik_gry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Wynik gry: 0" />


    <TextView
        android:id="@+id/liczba_rzutow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Liczba rzutów: 0" />


    <Button
        android:id="@+id/pszycisk_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#D2691E"
        android:text="RESETUJ WYNIK"/>




</LinearLayout>